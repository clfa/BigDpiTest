    <xs:complexContent>
      <xs:extension base="dn:BaseSchemaEasySearchType">
        <xs:attribute name="SchemaContext" type="xs:Name">
          <xs:annotation>
            <xs:documentation>插件配置的数据库Context，默认为Schema</xs:documentation>
          </xs:annotation>
        </xs:attribute>
        <xs:attribute name="Key" type="xs:Name" use="required">
          <xs:annotation>
            <xs:documentation>在数据表中的键值</xs:documentation>
          </xs:annotation>
        </xs:attribute>
      </xs:extension>
    </xs:complexContent>
  </xs:complexType>-->
</xs:schema>
